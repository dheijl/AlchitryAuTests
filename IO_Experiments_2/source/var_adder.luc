module var_adder #(
BITS = 24 : BITS > 1
)(
	input x[BITS],
	input y[BITS],
	input cin,
	output sum[BITS],
	output cout
  ) 
{
  full_adder fulladder[BITS];

always 
  {
  	fulladder.x = x;
	  fulladder.y = y;
	  fulladder.cin[0] = cin;
	  fulladder.cin[BITS - 1:1] = fulladder.cout[BITS - 2:0];
	  sum = fulladder.sum;
	  cout = fulladder.cout[BITS - 1];
  }
}